<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h2 class="auth-title">パスワードを忘れた方</h2>
      <p class="auth-subtitle">パスワードリセットのメールをお送りします</p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, local: true, class: "auth-form") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, "メールアドレス", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "登録したメールアドレスを入力" %>
      </div>

      <div class="form-group">
        <%= f.submit "パスワードリセットメールを送信", class: "btn btn-primary btn-full" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
